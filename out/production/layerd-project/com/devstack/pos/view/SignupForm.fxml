<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane fx:id="context" prefHeight="400.0" prefWidth="393.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devstack.pos.controller.SignupFormController">
    <children>
        <Text fill="#2980b9" layoutX="151.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Robotic-Tech">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Text>
        <JFXTextField fx:id="txtEmail" labelFloat="true" layoutX="36.0" layoutY="98.0" prefHeight="25.0"
                      prefWidth="323.0" promptText="Email">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </JFXTextField>
        <JFXTextField fx:id="txtPassword" labelFloat="true" layoutX="36.0" layoutY="167.0" prefHeight="25.0"
                      prefWidth="323.0" promptText="Password">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </JFXTextField>
        <JFXButton buttonType="RAISED" layoutX="56.0" layoutY="244.0" onAction="#btnRegisterNowOnAction"
                   prefHeight="25.0" prefWidth="283.0" style="-fx-background-color: #3498db;" text="Register now"
                   textFill="#f2f2f2">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </JFXButton>
        <JFXButton buttonType="RAISED" layoutX="56.0" layoutY="323.0" onAction="#AllreadyHaveAnAccountOnAction"
                   prefHeight="25.0" prefWidth="283.0" style="-fx-background-color: #2c3e50;"
                   text="Allready have an account" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </JFXButton>
        <Text fill="#2980b9" layoutX="187.0" layoutY="305.0" strokeType="OUTSIDE" strokeWidth="0.0" text="OR">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
